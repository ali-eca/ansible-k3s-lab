# Vault Configuration for Production
ui = true
disable_mlock = true

# Storage backend - using file storage for simplicity
# In production, consider using Consul, etcd, or cloud storage
storage "file" {
  path = "/opt/vault/data"
}

# Network listener
listener "tcp" {
  address     = "0.0.0.0:{{ services.vault }}"
  tls_disable = 1
  # In production, enable TLS:
  # tls_disable = 0
  # tls_cert_file = "/opt/vault/tls/vault.crt"
  # tls_key_file = "/opt/vault/tls/vault.key"
}

# API address
api_addr = "{{ vault.address }}"
cluster_addr = "https://{{ master_node.ip }}:8201"

# Logging
log_level = "INFO"
log_format = "json"

# Performance and limits
default_lease_ttl = "168h"
max_lease_ttl = "720h"

# Enable Prometheus metrics
telemetry {
  prometheus_retention_time = "30s"
  disable_hostname = true
}

